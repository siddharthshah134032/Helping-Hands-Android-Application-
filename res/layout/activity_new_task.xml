<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:weightSum="100" android:layout_height="match_parent">
	<ScrollView android:layout_weight="20" android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout android:orientation="vertical"
			android:layout_width="match_parent" android:layout_height="match_parent">
			<TextView android:text="Name:"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/etName">
			</EditText>
			<TextView android:text="Description:"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/etDescription"></EditText>
			<TextView android:text="Time:" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<TimePicker android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/tpTime"></TimePicker>
			
			<TextView android:text="Date:"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<DatePicker android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/dpDate"></DatePicker>
			
			<TextView android:text="Reminder:"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<Spinner
    android:id="@+id/reminder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" />
		</LinearLayout>
	</ScrollView>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="match_parent" android:layout_weight="80"
		android:layout_height="fill_parent">

		<Button android:text="Cancel" android:id="@+id/bCancel"
			android:layout_width="100dp" android:layout_height="wrap_content"
			android:layout_gravity="left" android:layout_marginLeft="50dp"></Button>
		<Button android:text="Add" android:id="@+id/bAdd"
			android:layout_width="100dp" android:layout_height="wrap_content"
			android:layout_gravity="right" android:layout_marginLeft="80dp" android:onClick="sendMessage"></Button>
	</LinearLayout>
	
</LinearLayout>